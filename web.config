<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Point IIS to your Node entry -->
      <add name="iisnode" path="server.js" verb="*" modules="iisnode"/>
    </handlers>
    <rewrite>
      <rules>
        <rule name="NodeRule" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Enable iisnode logs to a writable location -->
    <iisnode loggingEnabled="true"
             devErrorsEnabled="true"
             logDirectory="D:\home\LogFiles\iisnode" />
  </system.webServer>
</configuration>
